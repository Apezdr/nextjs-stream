MONGODB_URI=mongodb://dbUser:your_password@your_ip:your_port/?authMechanism=DEFAULT
MONGODB_DB=Media
MONGODB_DB_USERS=Users
# Auth
NEXTAUTH_SECRET=your_nextauth_secret
AUTH_TRUST_HOST="true"
AUTH_GOOGLE_ID=your_google_client_id
AUTH_GOOGLE_SECRET=your_google_client_secret
NEXTAUTH_URL=https://cinema.your-domain.com
# Discord Auth
AUTH_DISCORD_ID=your_discord_client_id
AUTH_DISCORD_SECRET=your_discord_client_secret
#APIs (deprecated)
#TMDB_API_KEY=your_tmdb_api_key
# TMDB Server Configuration
# Optional: Dedicated TMDB server URL (falls back to NEXT_PUBLIC_NODE_SERVER_URL if not set)
# TMDB_NODE_SERVER_URL=https://subdomain.your-domain.com/node/tmdb
#Chromecast
CHROMECAST_RECEIVER_ID=your_chromecast_receiver_id
#Deployment Specific
NEXT_PUBLIC_BASE_URL=https://cinema.your-domain.com
#
# Webhook IDs for server authentication - NOT prefixed with NEXT_PUBLIC_
# Each webhook ID corresponds to a specific server and is used for authentication
# The index in WEBHOOK_ID_X should match the index in NEXT_PUBLIC_NODE_SERVER_URL_X
WEBHOOK_ID=322fb39e4591514d2b8c1697sbc72c9c # Default/main server webhook ID
# WEBHOOK_ID_2=521ebe9e6211514d2b8c1697sbc72c98 # Second server webhook ID (if configured)
# WEBHOOK_ID_3=another_webhook_id_here # Third server webhook ID (if configured)
# 
# These webhook IDs are used for:
# 1. Authenticating system status notifications
# 2. Validating webhook requests for synchronization
# 3. Identifying which server a request is coming from
#
SONARR_ICAL_LINK=https://your-radarr-server.com/sonarr/feed/v3/calendar/Sonarr.ics?apikey=your_api_key&PastDays=1880&FutureDays=380
RADARR_ICAL_LINK=https://your-radarr-server.com/radarr/feed/v3/calendar/Radarr.ics?unmonitored=true&apikey=your_api_key&PastDays=1880&FutureDays=380
# File Server
NEXT_PUBLIC_FILE_SERVER_URL=https://subdomain.your-domain.com
NEXT_PUBLIC_NODE_SERVER_URL=https://subdomain.your-domain.com/node # Depends on your node path
# Admin Users
# Comma Seperated Emails
NEXT_PUBLIC_ADMIN_USER_EMAILS=email1@xxxx.com,email2@zzzz.com
# Privacy Policy - Show admin emails in privacy policy (set to 'false' to hide)
SHOW_ADMIN_EMAILS=true
# Site Title
NEXT_PUBLIC_SITE_TITLE=Cinema Sanctuary
# Site Description
NEXT_PUBLIC_SITE_DESCRIPTION=Sharing media content with friends and family.
# Required for NextJS to serve your (mostly just image) files uses comma seperation for multiple domains
REMOTE_PATTERNS=https://subdomain.your-domain.com,https://image.tmdb.org,https://m.media-amazon.com
# Optional for Reverse Proxy paths to NEXT_PUBLIC_FILE_SERVER_URL
#NEXT_PUBLIC_FILE_SERVER_PREFIX_PATH=/media

# Multi-Server
# if you have multiple servers make sure you add to `REMOTE_PATTERNS` for each file server
# NEXT_PUBLIC_NODE_SERVER_URL_2=https://subdomain.your-second-domain.com/node
# NEXT_PUBLIC_FILE_SERVER_URL_2=https://subdomain.your-second-domain.com

# Optional for Reverse Proxy paths to NEXT_PUBLIC_FILE_SERVER_URL_2
#NEXT_PUBLIC_FILE_SERVER_PREFIX_PATH_2=/media

# NEXT_PUBLIC_NODE_SERVER_URL_3=https://subdomain.your-third-domain.com/utils
# NEXT_PUBLIC_FILE_SERVER_URL_3=https://subdomain.your-third-domain.com

# Optional for Reverse Proxy paths to NEXT_PUBLIC_FILE_SERVER_URL_3
#NEXT_PUBLIC_FILE_SERVER_PREFIX_PATH_3=/public

# User Approval Settings
# Set to 'true' to automatically approve new users, 'false' to require manual admin approval (default)
AUTO_APPROVE_USERS=false
