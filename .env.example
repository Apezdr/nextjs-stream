#Deployment Specific
NEXT_PUBLIC_BASE_URL=https://cinema.your-domain.com
#
# Webhook IDs for server authentication - NOT prefixed with NEXT_PUBLIC_
# Each webhook ID corresponds to a specific server and is used for authentication
# The index in WEBHOOK_ID_X should match the index in NODE_SERVER_URL_X
WEBHOOK_ID=322fb39e4591514d2b8c1697sbc72c9c # Default/main server webhook ID
# WEBHOOK_ID_2=521ebe9e6211514d2b8c1697sbc72c98 # Second server webhook ID (if configured)
# WEBHOOK_ID_3=another_webhook_id_here # Third server webhook ID (if configured)
# 
# These webhook IDs are used for:
# 1. Authenticating system status notifications
# 2. Validating webhook requests for synchronization
# 3. Identifying which server a request is coming from
#
SONARR_ICAL_LINK=https://your-radarr-server.com/sonarr/feed/v3/calendar/Sonarr.ics?apikey=your_api_key&PastDays=1880&FutureDays=380
RADARR_ICAL_LINK=https://your-radarr-server.com/radarr/feed/v3/calendar/Radarr.ics?unmonitored=true&apikey=your_api_key&PastDays=1880&FutureDays=380
# File Server (Runtime Environment Variables - adapt to deployment server)
FILE_SERVER_URL=https://subdomain.your-domain.com
NODE_SERVER_URL=https://subdomain.your-domain.com/node # Depends on your node path
# Optional for Reverse Proxy paths to FILE_SERVER_URL
# FILE_SERVER_PREFIX_PATH=/media
# Admin Users
# Comma Seperated Emails
ADMIN_USER_EMAILS=email1@xxxx.com,email2@zzzz.com
# Privacy Policy - Show admin emails in privacy policy (set to 'false' to hide)
SHOW_ADMIN_EMAILS=true
# Site Title
NEXT_PUBLIC_SITE_TITLE=Cinema Sanctuary
# Site Description
NEXT_PUBLIC_SITE_DESCRIPTION=Sharing media content with friends and family.
# Required for NextJS to serve your (mostly just image) files uses comma seperation for multiple domains
REMOTE_PATTERNS=https://subdomain.your-domain.com,https://image.tmdb.org,https://m.media-amazon.com
# Optional for Reverse Proxy paths to FILE_SERVER_URL
#FILE_SERVER_PREFIX_PATH=/media

# Cross-Domain Authentication (Optional)
# If your Next.js app and Node server are on different subdomains of the same parent domain,
# set this to enable cookie sharing across subdomains.
# Example: If using cinema.example.com and node.example.com, set to ".example.com"
# Leave blank or unset for default single-domain behavior (most secure for single-domain deployments)
AUTH_COOKIE_DOMAIN=

# When to use AUTH_COOKIE_DOMAIN:
# - Set if Next.js app and Node server are on DIFFERENT subdomains (e.g., cinema.example.com and node.example.com)
# - Value should be the parent domain with leading dot: ".example.com"
# - Leave BLANK for single-domain deployments (more secure)
#
# Security Note:
# - Setting this shares cookies across ALL subdomains of the parent domain
# - Only use if you control all subdomains
# - For completely different domains, use webhook authentication instead
#
# Examples:
# AUTH_COOKIE_DOMAIN=.example.com    # Shares cookies between app.example.com and api.example.com

# Multi-Server (Runtime Environment Variables)
# If you have multiple servers make sure you add to `REMOTE_PATTERNS` for each file server
# NODE_SERVER_URL_2=https://subdomain.your-second-domain.com/node
# FILE_SERVER_URL_2=https://subdomain.your-second-domain.com

# Optional for Reverse Proxy paths to FILE_SERVER_URL_2
# FILE_SERVER_PREFIX_PATH_2=/media

# NODE_SERVER_URL_3=https://subdomain.your-third-domain.com/utils
# FILE_SERVER_URL_3=https://subdomain.your-third-domain.com

# Optional for Reverse Proxy paths to FILE_SERVER_URL_3
# FILE_SERVER_PREFIX_PATH_3=/public

# User Approval Settings
# Set to 'true' to automatically approve new users, 'false' to require manual admin approval (default)
AUTO_APPROVE_USERS=false

# Sync Architecture Settings
# Set to 'true' to use the new domain-driven sync architecture, 'false' to use legacy flat sync (default)
# This allows testing the new architecture before full migration
USE_NEW_SYNC_ARCHITECTURE=false
